<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <ImageView
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_pos3"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:text="Welcome back, Rizqy"/>

    <LinearLayout
        android:background="@drawable/border_card_blue"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_dollar"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Penjualan"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_date"
                android:text="2019-12-12"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sales_by_date"
            android:layout_gravity="center_vertical"
            android:text="Rp 0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_cashier"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_sales"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Point Of Sale"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_linechart"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_history"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="History"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_achiev"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_aciev"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Achievement"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_store"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_store"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Store"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_product"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_bag"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Product"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_employee"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_card"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_employee"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Employee"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>