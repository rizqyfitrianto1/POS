<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.StartActivity">

    <ImageView
        android:id="@+id/img"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="100dp" />

    <com.santalu.diagonalimageview.DiagonalImageView
        android:layout_below="@+id/img"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blue"
        app:di_borderColor="#FF5722"
        app:di_borderEnabled="false"
        app:di_direction="top"
        app:di_overlap="410dp"
        app:di_position="right"/>


    <ImageView
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_pos3"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin_login"
                android:visibility="visible"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:text="LOGIN"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/tv_regist"
                        android:layout_weight="1"
                        android:text="REGISTER"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Email"/>

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="text"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Password"/>

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="textPassword"
                        android:textSize="18sp"
                        tools:ignore="TextFields" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:text="Lupa password"/>

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masuk"
                        android:background="@drawable/btn_bg"
                        android:textColor="@color/colorWhite"/>

            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_regist"
                android:visibility="gone"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_weight="1"
                        android:text="LOGIN"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@color/colorBlack"/>

                    <TextView
                        android:layout_weight="1"
                        android:text="REGISTER"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Username"/>

                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="text"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Email"/>

                    <EditText
                        android:id="@+id/edt_email_regist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="text"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Password"/>

                    <EditText
                        android:id="@+id/edt_password_regist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="textPassword"
                        android:textSize="18sp"
                        tools:ignore="TextFields" />


                    <Button
                        android:id="@+id/btn_regist"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sign up"
                        android:background="@drawable/btn_bg"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>